{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build-debug",
            "command": "cmake . && make",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        //Openocd flash firmware within VScode IDE
        {
            "type": "shell",
            "label": "flash-openocd",
            "group": "build",
            "dependsOn": "CMake: build",
            "command": "openocd",
            "args" : [
                "-f",
                "interface/stlink-v2.cfg",
                "-f",
                "target/stm32f1x.cfg",
                "-c",
                "program ${workspaceRoot}/build/stm32_template.elf verify reset exit"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: arm-none-eabi-gcc build active file",
            "command": "${env:ARM_TOOLCHAIN_PATH}arm-none-eabi-gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}